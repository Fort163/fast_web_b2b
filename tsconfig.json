{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "public/index.js",
    "sourceMap": true
  },
  "include": ["src/**/*","public/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}